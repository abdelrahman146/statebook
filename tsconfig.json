{
    "compilerOptions": {
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "ES6",
        "lib": ["ES2022", "DOM"],
        "outDir": "dist/esm",
        "strict": true,
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
        "sourceMap": true,
        "stripInternal": true,
        "strictNullChecks": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "importHelpers": true
    },
    "exclude": ["example", "dist"]
}
